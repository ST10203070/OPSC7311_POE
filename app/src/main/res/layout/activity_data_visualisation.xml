<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6F7FF">


    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="255dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Time Sheet Summary"
        android:textColor="#000000"
        android:textSize="26sp"
        android:textStyle="bold" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"
        android:layout_below="@id/tvTitle" />

    <TextView
        android:id="@+id/datePickerText"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:layout_below="@id/divider"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:text="Date filter: Select a date to search time-entries from"
        android:textColor="#000000"
        android:textSize="18sp" />


    <Button
        android:id="@+id/selectDateBtn"
        android:layout_width="170dp"
        android:layout_height="61dp"
        android:layout_below="@id/divider"
        android:layout_marginTop="48dp"
        android:text="Select Date"
        android:textColor="#000000"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/dateView"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_below="@id/divider"
        android:layout_marginTop="113dp"
        android:ems="10"
        android:inputType="date" />

    <ListView
        android:id="@+id/timesheet_entries_listview"
        android:layout_width="match_parent"
        android:layout_height="274dp"
        android:layout_below="@id/dateView"
        android:layout_marginTop="61dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@id/timesheet_entries_listview"
        android:layout_marginTop="27dp"
        android:text="Category Summary:"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/category_summary_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/timesheet_entries_listview"
        android:layout_marginTop="95dp"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="363dp"
        android:layout_height="32dp"
        android:layout_below="@+id/selectDateBtn"
        android:layout_marginTop="80dp"
        android:text="Summary View"
        android:textSize="25sp" />

    <LinearLayout
        android:id="@+id/buttonsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:gravity="center">

        <Button
            android:id="@+id/buttonSetGoals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set Goals"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_margin="8dp" />

        <Button
            android:id="@+id/buttonNewTimeEntry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Time Entry"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_margin="8dp" />

    </LinearLayout>

</RelativeLayout>